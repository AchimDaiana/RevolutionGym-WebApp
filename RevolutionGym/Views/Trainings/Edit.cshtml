@using RevolutionGym.Data.ViewModels
@model TrainingVM
@using RevolutionGym.Data.Enums
@{
    ViewData["Title"] = "Edit training";
}

<h2 class="text-center">Modifica un antrenament </h2>
<br />
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture" class="control-label"></label>
                        <input asp-for="Picture" class="form-control" />
                        <span asp-validation-for="Picture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartHour" class="control-label"></label>
                        <input asp-for="StartHour" type="time" class="form-control" />
                        <span asp-validation-for="StartHour" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FinishHour" class="control-label"></label>
                        <input asp-for="FinishHour" type="time" class="form-control" />
                        <span asp-validation-for="FinishHour" class="text-danger"></span>
                    </div>



                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<TrainingCategory>()"></select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrainerId" class="control-label"></label>
                        <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.Trainers"></select>
                        <span asp-validation-for="TrainerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubscriptionId" class="control-label"></label>
                        <select asp-for="SubscriptionId" class="form-control" asp-items="ViewBag.Subscriptions"></select>
                        <span asp-validation-for="SubscriptionId" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a class="float-right" asp-action="Index">Back to List</a>
            </div>




        </form>
    </div>
</div>




