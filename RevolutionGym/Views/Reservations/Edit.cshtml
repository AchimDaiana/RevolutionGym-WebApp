@using RevolutionGym.Data.ViewModels
@model ReservationVM

@{
    ViewData["Title"] = "Edit reservation";
}

<h2 class="text-center">Modifica o rezervare</h2>
<br />
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ParticipationHour" class="control-label"></label>
                        <input asp-for="ParticipationHour" type="time" class="form-control" />
                        <span asp-validation-for="ParticipationHour" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ParticipationDate" class="control-label"></label>
                        <input asp-for="ParticipationDate" type="date" class="form-control" />
                        <span asp-validation-for="ParticipationDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center col-md-6">
                    <div class="form-group">
                        <label asp-for="TrainingId" class="control-label"></label>
                        <select asp-for="TrainingId" class="form-control" asp-items="ViewBag.Trainings"></select>
                        <span asp-validation-for="TrainingId" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a class="float-right" asp-action="Index">Back to List</a>
                </div>

            </div>


        </form>
    </div>
</div>



