@model IEnumerable<Subscription>

@{
    ViewData["Title"] = "List of fitness subscriptions";
}

<h1>Lista abonamentelor fitness disponibile in fiecare zi</h1>

<div class="row">
    @{
        foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card" style="width: 18rem;">
                    <img src="@item.Picture" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text float-right">@item.Price </p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Vizualizare detalii</a>
                    </div>

                </div>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

            </div>


        }
    }

</div>
<div class="float-right">
    <a asp-action="Create">Add New Class</a>
</div>



